<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="BoardMapper">
  	<sql id="search">
  		<if test="keyword != null">
	  		<trim prefix="and (" suffix=")">
				title like '%'||#{keyword}||'%'
	 		</trim>
 		</if>
  	</sql>
  	<!-- 등록 -->
 	<insert id="regist" parameterType="bvo">
        insert into board(bno, title, content, writer) values (seq_board_bno.nextval, #{title}, #{content}, #{writer})
    </insert>
    
    <!-- 목록 조회 페이징(X) -->
    <select id="getList" resultType="bvo">
    	select * from board
    </select>
    
    <!-- 목록 조회 페이징(O) -->
    <select id="getListPaging" parameterType="pgvo" resultType="bvo">
    	<![CDATA[
	        select bno, title, content, writer, regdate, moddate, readcount from(
	               select /*+INDEX_DESC(board pk_board) */ rownum  as rn, bno, title, content, writer, regdate, moddate, readcount
	               from board where bno > 0
	    ]]>       
	    	<include refid="search"/>
	    <![CDATA[ 
	               and rownum <= #{pageNum} * #{amount}) 
	        where rn > (#{pageNum} -1) * #{amount}
	    ]]>
    </select>
    
    <!-- 총 게시글 수 -->
    <select id="totalCount" parameterType="pgvo" resultType="int">
    	<![CDATA[ 
	    	select count(*) from board
	    	where bno > 0
    	]]>
    		<include refid="search"/>
    </select>
    
    <!-- 상세 조회 -->
    <select id="getDetail" parameterType="int" resultType="bvo">
    	select * from board where bno = #{bno}
    </select>
    
    <!-- 현재 게시글 번호 조회 -->
    <select id="getCurrBno" resultType="int">
    	select seq_board_bno.currval from dual
    </select>
    
    <!-- 수정 -->
    <update id="modify" parameterType="bvo">
    	update board set title=#{title}, content=trim(#{content}), writer=#{writer},
 		moddate=sysdate where bno = #{bno}
    </update>
    
    <delete id="remove" parameterType="int">
    	delete from board where bno = #{bno}
    </delete>
  </mapper>